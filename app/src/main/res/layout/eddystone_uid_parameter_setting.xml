<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

    <LinearLayout style="@style/Index_Title_Image">

        <TextView android:id="@+id/beacon_index" style="@style/setting_parameter_left_text" />

        <TextView android:id="@+id/beacon_title" android:layout_width="0dp" android:layout_height="match_parent" android:layout_gravity="center" android:layout_weight="1" android:gravity="center" android:textColor="@color/about_title" android:textSize="14sp" />

        <ImageView android:id="@+id/image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="right|center_vertical" />
    </LinearLayout>

    <LinearLayout style="@style/iBeaconEditLL">

        <TextView android:id="@+id/eddystone_namespaceLabel" style="@style/setting_parameter_left_text" android:text="Namespace: " />

        <EditText android:id="@+id/eddystone_namespace" style="@style/iBeaconEdit" android:digits="0123456789abcdefABCDEF" />
    </LinearLayout>

    <LinearLayout style="@style/iBeaconEditLL">

        <TextView android:id="@+id/eddystone_instanceLabel" style="@style/setting_parameter_left_text" android:text="Instance: " />

        <EditText android:id="@+id/eddystone_instance" style="@style/iBeaconEdit" android:digits="0123456789abcdefABCDEF" />
    </LinearLayout>

    <LinearLayout style="@style/iBeaconEditLL">

        <TextView android:id="@+id/eddystone_reservedLabel" style="@style/setting_parameter_left_text" android:text="Reserved: " />

        <EditText android:id="@+id/eddystone_reserved" style="@style/iBeaconEdit" android:digits="0123456789abcdefABCDEF" />
    </LinearLayout>


    <LinearLayout style="@style/iBeaconEditLL">

        <TextView android:id="@+id/eddystone_powerLable" style="@style/setting_parameter_left_text" android:text="RSSI at 0m: " android:textSize="14sp" />

        <EditText android:id="@+id/eddystone_power" style="@style/iBeaconEdit" android:digits="0123456789-" />
    </LinearLayout>

    <LinearLayout style="@style/iBeaconEditLL">

        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center_vertical" android:text="Enable:" android:textColor="@color/about_title" android:textSize="14sp" />

        <com.magna.moldingtools.Widget.SwitchButton android:id="@+id/beacon_enable" android:layout_width="54dp" android:layout_height="30dp" />
    </LinearLayout>

</LinearLayout>